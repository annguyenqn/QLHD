@page
@model QLHD.Pages.Clients.IndexModel
@{
}
<br>
<h2>List of Users</h2>
<a class='btn btn-primary btn-sm' href='/Clients/Create'> New User</a>
<table class="table">
    <thead>
        <tr>
            <th>Ma sv</th>
            <th>Ho ten</th>
            <th>Permision</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listClients)
        {
            <tr>
                <td>@item.id_SV</td>
                <td>@item.fullName</td>
                <td>@item.permision</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.id_SV">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/Clients/Delete?id=@item.id_SV">Delete</a>

                </td>
            </tr>
        }
    </tbody>

</table>
