@page
@model QLHD.Pages.Clients.editplanModel
@{
}
<br>
<h2>Edit plan</h2>
<form method="post">
    <input type="hidden" name="id_plan" value="@Model.PlanInfo.id_plan" />
    <div class="row mb-3">

        <label class="col-sm-3 col-form-label">Mã kế hoạch</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="id_plan" value="@Model.PlanInfo.id_plan" />

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tên kế hoạch</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="title" value="@Model.PlanInfo.title" />

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Thời gian</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="time" value="@Model.PlanInfo.time" />

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Địa điểm</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="place" value="@Model.PlanInfo.place" />

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Cấp hoạt động</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="level" value="@Model.PlanInfo.level" />

        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">
                Submit
            </button>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>

        </div>
    </div>

</form>